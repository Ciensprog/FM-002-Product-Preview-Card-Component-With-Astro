---
import IconCart from '@/assets/icons/cart.astro'

import Layout from '@/layouts/Layout.astro'
---

<Layout>
  <section class="grid min-h-screen px-5 py-10 place-content-center">
    <h1 class="sr-only">Frontend Mentor Challenge</h1>
    <article
      class="bg-white grid grid-cols-1 overflow-hidden rounded-[0.625rem] max-w-[21.25rem] w-full sm:grid-cols-2 sm:max-w-[37.5rem] z-10"
    >
      <h2 class="sr-only">Product Preview Card Component</h2>
      <figure class="h-60 sm:h-full w-full">
        <img
          src="product.jpg"
          class="h-full object-cover w-full"
          height={450}
          width={300}
          alt="Product"
        />
      </figure>
      <section class="p-6 sm:p-8">
        <p
          class="font-medium text-aurometal-400 text-xs tracking-[0.3125rem] uppercase"
        >
          Perfume
        </p>
        <h2 class="font-fraunces font-bold leading-8 mb-6 mt-5 text-[2rem]">
          Gabrielle Essence Eau De Parfum
        </h2>
        <p class="font-medium text-aurometal-400 text-sm leading-6">
          A floral, solar and voluptuous interpretation composed by Olivier
          Polge, Perfumer-Creator for the House of CHANEL.
        </p>
        <div class="flex gap-[1.1875rem] items-center mb-[1.875rem] mt-7">
          <div
            class="font-bold font-fraunces leading-8 text-[2rem] text-aquamarine-400"
          >
            $149.99
          </div>
          <s class="font-medium text-[0.8125rem] text-aurometal-400">
            $169.99
          </s>
        </div>
        <button
          class="bg-aquamarine-400 flex font-bold gap-3 items-center justify-center leading-4 py-4 rounded-lg text-sm text-white transition-colors w-full hover:bg-aquamarine-700"
        >
          <span class="h-4 w-[0.9375rem]">
            <IconCart />
          </span>
          <span class="">Add to Cart</span>
        </button>
      </section>
    </article>
  </section>
</Layout>
